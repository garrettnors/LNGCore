<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LNGCore</title>
    <link href="https://fonts.googleapis.com/css?family=.|Playfair+Display:light,normal,bold|Montserrat:light,normal,bold|Roboto:light,normal,bold" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.Content("~/lib/jquery/dist/jquery.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/js/site.js")"></script>
</head>
<body>
    <partial name="_CookieConsentPartial" />
    @if (TempData["ErrorBannerMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            <div class="container">
                <strong>Something went wrong!</strong> @TempData["ErrorBannerMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    @if (TempData["SuccessBannerMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            <div class="container">
                <strong>Great News!</strong> @TempData["SuccessBannerMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    }
    <partial name="_Header" />
    @RenderBody()
    <div class="container">
        <hr />
        <footer>
            <div class="row">
                <div class="col-sm-3">
                    <p>&copy; @($"{DateTime.Now.Year} - LNG Laserworks")</p>
                </div>
                <div class="col-sm-9 text-sm-right">
                    <a href="@Url.Action("About","Home")">About Us</a> |
                    <a href="@Url.Action("Contact","Home")">Contact Us</a> |
                    <a href="@Url.Action("Privacy","Home")">Privacy Policy</a>
                </div>
            </div>
        </footer>
    </div>



    @RenderSection("Scripts", required: false)
</body>
</html>
