                        new Tuple<string,string,string>("Invoice", "ViewReports", "View Reports"),
                        new Tuple<string,string,string>("Configuration", "Index", "Configuration")
                    };

                    foreach (var nav in navItems)
                    {
                        <li class="nav-item @(nav.Item3.ToLower() == ViewBag.ActiveAction?.ToString().ToLower() ? "active" : "")">
                            <a class="nav-link" asp-controller="@nav.Item1" asp-action="@nav.Item2">@nav.Item3</a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
