@model List<LNGCore.Domain.Database.Log>


<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h4 class="m-0">Email Summary</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <ul class="list-group">

                @foreach (var log in Model.OrderByDescending(o => o.Date))
                {
                    <li class="list-group-item">
                        <i>Sent @log.Date</i>
                        <br />
                        <small>@Html.Raw(log.Summary)</small>
                    </li>
                }
            </ul>
        }
        else
        {
            <h4 class="text-center">No email history available for this invoice.</h4>
        }
    </div>
</div>
