@model LNGCore.Domain.Database.Item
<div class="card m-0">
    <div class="card-header">
        <h4 class="m-0">@(Model.ItemId == 0 ? "Add New Item" : $"Edit {Model.ItemName}")</h4>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("EditItem", "Item", FormMethod.Post))
        {
            @Html.HiddenFor(f => f.ItemId);
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            @Html.LabelFor(f => f.ItemName)
                            @Html.TextBoxFor(f => f.ItemName, new { @class = "form-control form-control-sm", @maxlength = "50" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-sm btn-success">Save Item</button>
                <span class="pr-3"></span>                
                <button type="button" data-dismiss="modal" class="btn btn-sm btn-secondary">Cancel</button>
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
        }

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}